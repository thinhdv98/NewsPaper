<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorBackgroud"
    tools:context="com.duan2.thinh.newspaper.ui.fragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/imGamek2"
            android:clickable="true"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imGamek"
                android:background="@drawable/newspaper_gamek"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/aaa"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="Gamek"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imGenk"
                android:background="@drawable/newspaper_genk"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:textColor="@color/colorText"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="GenK"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imDantri"
                android:background="@drawable/newspaper_dantri"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:textColor="@color/colorText"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="DanTri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
