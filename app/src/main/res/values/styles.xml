<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainApp</item>
        <item name="colorPrimaryDark">@color/colorMainApp</item>
        <item name="colorAccent">@color/colorMainApp</item>
        <item name="android:navigationBarColor">@color/colorMainApp</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMainApp</item>
        <item name="colorPrimaryDark">@color/colorMainApp</item>
        <item name="colorAccent">@color/colorMainApp</item>
        <item name="android:navigationBarColor">@color/colorMainApp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="blackTheme" >
        <item name="android:background">#000000</item>
        <item name="android:text">#FFFFFF</item>
    </style>

</resources>